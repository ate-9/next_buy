<%# pc側の表示 %>
<div class="hidden sm:ml-6 sm:block">
  <div class="flex space-x-4">
    <% if @logged_in %>
      <%= button_to "Log Out", session_path, method: :delete, class: "rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white" %>
    <% else %>
      <%= button_to "Log in", new_session_path, class: "rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white" %>
    <% end %>
  </div>
</div>
