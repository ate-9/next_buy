<div class="w-9/10 h-full overflow-y-auto">
  <%# 上部分  %>
  <div class="w-9/10 mx-auto mt-[1em]">
    <div class="h-1/3 text-sky-300 flex justify-between items-center sticky top-0 py-2">
      <div class="text-2xl font-bold">
        リスト一覧
      </div>
      <%# 作成ボタン %>
      <%= link_to "+ 作成", new_list_path, class: "grid place-items-center w-[5em] h-[3em] rounded-lg bg-blue-600 hover:bg-blue-500 text-white" %>
    </div>
  </div>

  <%# リスト %>
  <div class="w-9/10 h-[80vh] mx-auto mt-[1em] overflow-y-auto overflow-hidden">
    <% @lists.each do |list| %>
      <%= render partial: "index_list_container", locals: { list: list } %>
    <% end %>
  </div>
</div>
