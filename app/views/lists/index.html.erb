<% if notice.present? %>
  <div class="w-4/5 flex flex-col mt-12 mx-auto">
    <p  id="notice" class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block">
      <%= notice %>
    </p>
  </div>
<% end %>

<% if @lists.any? %>
  <%= render partial: "index_lists" %>
<% else %>
  <%= render partial: "index_no_lists" %>
<% end %>
