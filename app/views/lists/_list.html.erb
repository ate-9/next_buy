<%= link_to list_path(list) do %>
  <div id="<%= dom_id list %>" class="w-full mb-[1em] rounded-xl p-7 pb-5 shadow-md bg-blue-400/60 shadow-blue-400/90 inset-shadow-xs inset-shadow-blue-100/90">
    <div class="text-white text-center text-3xl">
      <%= list.list_name %>
    </div>

    <%# アイテム一覧 %>
    <div class="my-[1em]">
      <% @items.each do |item| %>
        <div class="text-2xl text-slate-500">
          <%= item.name %>
        </div>
      <% end %>
    </div>

    <div class="text-1xl">
      <div class="text-right grid place-items-center w-full p-2 text-1xl rounded-lg bg-blue-600/80 hover:bg-blue-500 text-white font-medium">
        詳細を見る
      </div>
    </div>
  </div>
<% end %>