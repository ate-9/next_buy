<div id="<%= dom_id list %>">
  <div class="text-3xl text-slate-700">
    <%= list.list_name %>
  </div>
  <% @items.each do |item| %>
    <div class="text-2xl text-slate-500">
      <%= item.name %>
    </div>
  <% end %>

  <div class="text-1xl text-slate-500">
    <%= link_to "詳細を見る", lists_path, class: "text-right grid place-items-center w-full p-2 text-1xl rounded-lg bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  </div>
</div>
